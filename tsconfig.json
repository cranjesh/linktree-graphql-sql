{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {},
      "types": ["jest", "node"],
      "target": "ES2017",
      "outDir": "dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "newLine": "lf",
      "strict": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noFallthroughCasesInSwitch": true,
      "removeComments": true,
      "sourceMap": true,
      "inlineSources": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true
    },
    "include": [
      "**/src/**/*.ts"
    ],
    "exclude": [
      "*/node_modules/*",
      "dist",
      "../../../node_modules/"
    ]
  }